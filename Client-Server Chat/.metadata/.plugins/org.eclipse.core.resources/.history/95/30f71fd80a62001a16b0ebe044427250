import java.io.*;
import java.net.Socket;
import java.util.Scanner;

public class MyClient {
	public static void main(String[] args) throws IOException {
		
		System.out.println("Client ready");
		
		try {
			
			Socket socket = new Socket("localhost", 1234);
			DataInputStream inputStream = new DataInputStream(socket.getInputStream());
			DataOutputStream outputStream = new DataOutputStream(socket.getOutputStream());
			Scanner input = new Scanner(new InputStreamReader(System.in));
			
			String inputMsg = "";
			String outputMsg = "";
			
			while (!inputMsg.equalsIgnoreCase("bye")) {
				outputMsg = input.nextLine();		// Enter a message
				outputStream.writeUTF(outputMsg);	// Printing the entered message
				
				inputMsg = inputStream.readUTF();	// Getting message from server
				System.out.println(inputMsg);		// Printing server message
			}
			socket.close();
			
		} catch (IOException e) {
			System.out.println("Error: " + e);
		}
	
	}
}
